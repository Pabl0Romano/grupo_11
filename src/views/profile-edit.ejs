<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: 'Register'}) %>
<body>
    <%- include('partials/header') %>
    <main>
        
        <section class="titulo">
            <h2>EDITÁ TU CUENTA</h2>
        </section>
        <form class="registro" action="/user/edit/<%= user.id  %>/?_method=put " method="POST" enctype="multipart/form-data"> 
            <section class="formulario">
                <article class="datos">
                    <p class="campo">
                        <label for="nombre">Nombre*</label>
                        <input type="text" name="nombre" id="nombre" class="nombre" placeholder="<%= user.first_name %>" value="<%= locals.oldData ? oldData.nombre : null %>">
                        <% if (locals.errors && errors.nombre) { %>
                            <div class="text-danger">
                                <%=errors.nombre.msg %>
                            </div>
                        <% } %>
                    </p>
                   
                    <p class="campo">
                        <label for="apellido">Apellido*</label>
                        <input 
                            type="text" 
                            name="apellido" 
                            id="apellido" 
                            class="apellido"
                            placeholder="<%= user.last_name %>"
                            value="<%= locals.oldData ? oldData.apellido : null %>"
                        >
                        <% if (locals.errors && errors.apellido) { %>
                            <div class="text-danger">
                                <%=errors.apellido.msg %>
                            </div>
                        <% } %>
                    </p>          
                    <p class="campo">
                        <label for="email">Email*</label>
                        <input type="email" name="email" id="email" class="email" placeholder="<%= user.email %>" value="<%= locals.oldData ? oldData.email : null %>">
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%=errors.email.msg %>
                            </div>
                        <% } %>
                    </p>
                    
                    <p class="campo">
                        <label for="telefono">Teléfono</label>
                        <input type="number" name="telefono" id="telefono" class="telefono" placeholder="<%= user.phone_number %>" value="<%= locals.oldData ? oldData.telefono : null %>">
                        <% if (locals.errors && errors.telefono) { %>
                            <div class="text-danger">
                                <%=errors.telefono.msg %>
                            </div>
                        <% } %>
                    </p>
                    <h3 class="obligatorio">*Campos obligatorios</h3>
                </article>
                <p>
                    <label for="imgperfil">Imagen de Perfil</label>
                    <input type="file" name= "imgperfil">
                    <% if (locals.errors && errors.imgperfil) { %>
                        <div class="text-danger">
                            <%=errors.imgperfil.msg %>
                        </div>
                    <% } %>
                </p>
                <div class="crear">
                    <button type="submit">EDITAR</button>
                </div>
            </section>
        </form>
    </main>
    <%- include('partials/footer') %>
</body>
</html>